        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Podcasts</title>
    </head>
<body>
    <header id="heder">
        <div class="ostatakHedera">
            <a href="/"><img src="blasterLogo/Blaster-Logo-Favicon.png" alt="logo"></a>
        <div>
             <a href="/dogadjaji">Догађаји</a>
                <a href="/izvodjaci">Извођачи</a>
                <a href="/podkesti">Подкести</a>
                <a href="/o_nama">О нама</a>
                <a href="/saradnja">Сарађуј са нама!</a>
        </div>
        <div class="navmenu">
            <input type="checkbox" name="hamburger" id="hamburger"></input>
            <label for="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </label>
            <div class="hamburgerovMeni">
                <a href="/dogadjaji">Догађаји</a>
                <a href="/izvodjaci">Извођачи</a>
                <a href="/podkesti">Подкести</a>
                <a href="/o_nama">О нама</a>
                <a href="/saradnja">Сарађуј са нама!</a>
            </div>
        </div>
        </div>
    </header>

    <section class="stranicaPodkesta">
        <br><br><br><br>
        <h2>Подкести</h2>
        <div class="podkestiKartice">
            <% if (data.length > 0){ %>    
                <% for(let d of data){ %> 
                <a href="<%= d.link %>">
                <div class="podkestKartica">
                    <img src="/<%= d.slika %>" alt="brko">
                    <div>
                        <div class="podkestKarticaPlejSlika"><span class="material-symbols-sharp">
                            play_circle
                            </span></div>
                        <div class="podkestKarticaInfo">
                            <h3><%= d.naslov %></h3>
                            <p>Blaster podcast #<%= d.id %></p>
                        </div>
                    </div>
                </div>
            </a>
            <% } %>
            <% } else {%>
        </div>
            <h1>Nema trenutno Podkesta</h1>    
        <% } %>
    </section>

    <footer>
        <div>
            <h4>Пронађи нас на</h4>
            <a href="#" class="futerDugme">Инстаграм</a>
            <a href="#" class="futerDugme">Фејсбук</a>
            <a href="#" class="futerDugme">Јутјуб</a>
            <a href="#" class="futerDugme">Саундклауд</a>
            <a href="#" class="futerDugme">Бендкемп</a>
        </div>
        <div>
            <h4>Мени</h4>
             <a href="/dogadjaji">Догађаји</a>
